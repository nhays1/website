<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>website.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Gamewindowservlet</servlet-name>
    <servlet-class>website.servlet.Gamewindowservlet</servlet-class>
  </servlet>
 <servlet>
    <servlet-name>Userinfoservlet</servlet-name>
    <servlet-class>website.servlet.Userinfoservlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Newuserservlet</servlet-name>
    <servlet-class>website.servlet.Newuserservlet</servlet-class>
  </servlet>


  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Gamewindowservlet</servlet-name>
    <url-pattern>/Gamewindow</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Userinfoservlet</servlet-name>
    <url-pattern>/userinfo</url-pattern>
  </servlet-mapping>

    <servlet-mapping>
    <servlet-name>Newuserservlet</servlet-name>
    <url-pattern>/newuser</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
